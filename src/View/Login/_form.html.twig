{% for loginError in loginErrors %}
    {{ loginError }}
{% endfor %}

<!-- LOGIN POPUP -->
<button class="btn btn-primary mt-5 pt-3" type="button" data-bs-toggle="collapse" data-bs-target="#login-form" aria-expanded="false" aria-controls="login-form">
	SE CONNECTER
</button>
<section class="ftco-section collapse" id="login-form">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 col-lg-10">
				<div class="wrap d-md-flex">
					<div class="login-wrap p-4 p-md-5">
						<div class="d-flex">
							<div class="w-100">
								<h3 class="mb-4 text-center">Connectez-vous</h3>
							</div>
						</div>
						<form method="post" class="signin-form">
							<div class="form-group mb-3">
								<label for="email" name="email">Email *</label>
								<input type="text" class="form-control" value="" name="email" id="email" required>
							</div>
							<div class="form-group mb-3">
								<label for="password" name="password">Mot de passe *</label>
								<input type="password" class="form-control" value="" placeholder="********" name="password" id="password" required>
							</div>
							<div class="form-group">
								<button type="submit" class="btn btn-primary rounded submit w-100">Se connecter</button>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50 text-left">
									<label class="checkbox-wrap checkbox-primary mb-0">
										<input type="checkbox" checked> Se rappeler de moi
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="#">Mot de passe oubli√©</a>
								</div>
							</div>
						</form>
						
						<div class="text-center">
							<p class="text-center mt-5">Pas encore de compte ?</p>
							<a class="btn btn-primary rounded mx-auto d-block" role="button" href="/signup">Inscrivez-vous</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
