<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hackademy - {% block title %}{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="icon" href="/assets/images/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link media ="screen" rel="stylesheet" href="/assets/css/form.css">

    <link media ="screen" rel="stylesheet" href="/assets/css/style.css">
    <link media ="screen" rel="stylesheet" href="/assets/css/signup_signin.css">
    <link media ="screen" rel="stylesheet" href="/assets/css/profile.css">
    {% block stylesheet %}{% endblock %}
</head>

<body class="d-flex flex-column min-vh-100 main-bg-color">
    {% include 'Layout/_header.html.twig' %}

    {% block content %}{% endblock %}

    {% include 'Layout/_footer.html.twig' %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    {% block javascript %}
        {% if loginErrors|length > 0 %}
            <script type="text/javascript">
                var myCollapsible = document.getElementById('login-form')
                var bsCollapse = new bootstrap.Collapse(myCollapsible, {
                    show: true 
                })
            </script>
        {% endif %}
    {% endblock %} 
</body>
</html>