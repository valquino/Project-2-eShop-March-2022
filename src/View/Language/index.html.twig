{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Languages</h1>
    <ul>
        {% for language in languages %}
            <li><a href="/languages/show?id={{ language.id }}">{{ language.id }}. {{ language.name }}</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/languages/add">Ajouter</a>
{% endblock %}