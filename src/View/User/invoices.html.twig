                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Cours commandés</h5>
                        <p class="card-text">
                            {% for training in trainings[loop.index0].titles %}
                            <li>{{ training.title }}</li>
                            {% endfor %}
                        </p>
                        <a class="btn btn-primary" href="/invoices/show?id={{ invoices[loop.index0].id }}">Afficher</a>
                    </div>
                    <div class="card-footer text-muted">
                        Date : {{ invoices[loop.index0].created_at }}
                    </div>
                </div>
            
                {% else %}
                <p class="text-center">Aucune facture trouvée !</p>
            {% endfor %}
        </div>
{% endblock %}
